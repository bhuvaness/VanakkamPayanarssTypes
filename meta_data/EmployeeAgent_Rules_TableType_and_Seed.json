  {
    "RuleId": "EMP-REQ-CORE",
    "Name": "Employee required core fields",
    "Scope": "Table",
    "Target": "Employee",
    "Trigger": "OnCreate",
    "Severity": "Error",
    "ExpressionJson": "{\"type\":\"required\",\"fields\":[\"EmployeeCode\",\"FirstName\",\"LastName\",\"Status\"]}",
    "Message": "EmployeeCode, FirstName, LastName, and Status are required.",
    "IsActive": true,
    "Version": "v1"
  },
  {
    "RuleId": "EMPPROF-EMAIL-FMT",
    "Name": "Profile email format",
    "Scope": "Field",
    "Target": "EmployeeProfile.EmailAddress",
    "Trigger": "OnUpsert",
    "Severity": "Warning",
    "ExpressionJson": "{\"type\":\"regex\",\"pattern\":\"^[^\\\\s@]+@[^\\\\s@]+\\\\.[^\\\\s@]+$\"}",
    "Message": "Email address seems invalid.",
    "IsActive": true,
    "Version": "v1"
  },
  {
    "RuleId": "EMP-CODE-IMMUTABLE",
    "Name": "EmployeeCode cannot change",
    "Scope": "Field",
    "Target": "Employee.EmployeeCode",
    "Trigger": "OnUpdate",
    "Severity": "Error",
    "ExpressionJson": "{\"type\":\"immutableIfSet\"}",
    "Message": "EmployeeCode cannot be modified after creation.",
    "IsActive": true,
    "Version": "v1"
  },
  {
    "RuleId": "EMP-CODE-UNIQUE",
    "Name": "EmployeeCode must be unique",
    "Scope": "Field",
    "Target": "Employee.EmployeeCode",
    "Trigger": "OnUpsert",
    "Severity": "Error",
    "ExpressionJson": "{\"type\":\"unique\",\"table\":\"Employee\",\"field\":\"EmployeeCode\"}",
    "Message": "EmployeeCode already exists.",
    "IsActive": true,
    "Version": "v1"
  },
  {
    "RuleId": "EMPPROF-EMERGENCY-HIGH-RISK",
    "Name": "Emergency contact required for high-risk roles",
    "Scope": "Table",
    "Target": "EmployeeProfile",
    "Trigger": "OnUpsert",
    "Severity": "Error",
    "ExpressionJson": "{\"type\":\"conditionalRequired\",\"if\":{\"path\":\"input.roleRisk\",\"equals\":\"High\"},\"thenRequired\":[\"EmergencyContactName\",\"EmergencyContactPhone\"]}",
    "Message": "High-risk roles require emergency contact name and phone.",
    "IsActive": true,
    "Version": "v1"
  }
